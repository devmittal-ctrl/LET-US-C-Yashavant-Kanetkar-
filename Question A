#include<stdio.h>
int main() {
    // ASKING THE USER FOR RAMESH BASIC SALARY
    int bs;
    printf("enter the basic salary ");
    scanf("%d",&bs);
    // HIS DEARNESS ALLOWANCE IS 40% OF THIS BASE SALARY 
    float da=0.4*bs;
    printf("his dearness allowance is %.2f\n",da);
    // HIS HOUSE RENT ALLOWANCE IS 20% OF THIS BASE SALARY 
    float hra=0.2*bs;
     printf("his house rent allowance is %.2f\n",hra);
     // CALCULATING HIS TOTAL SALARY 
     printf("TOTAL SALARY : (base salary = %d + dearness allowance = %.2f + house rent allowance = %.2f) = %.2f\n",bs,da,hra,bs+da+hra);

    return 0;
}
