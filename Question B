#include<stdio.h>
int main() {
    /// CALCULATING THE DISTANCE B/W 2 CITIES 
    // IN METERS,FEETS,INCHES,CENTIMETER
    // KM=1000 M
    // KM=3280.83 FEET
    // KM=100000 CM
    // KM=39370.07 INCHES
    int a;
    printf("enter the distance b/w 2 citites in km is : ");
    scanf("%d",&a);
    // now starting the conversion 
    printf("the distance in meter is %d\n",1000*a);
    printf("the distance in feet is %.2f\n",3280.83*a);
    printf("the distance in inches is %.2f\n",39369.96*a);
    printf("the distance in feet is %d",100000*a);
    return 0;
}
