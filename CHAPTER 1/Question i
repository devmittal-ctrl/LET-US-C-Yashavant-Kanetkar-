#include<stdio.h>
int sum(int a){
   int ld=a%10;
   int fd=a/1000;
   int sum=ld+fd;
        printf("\n(First digit = %d) + (last Digit = %d) = sum = %d",fd,ld,sum);
        return 0;
}
int main(){
    // four digit number and first and last digit sum is answer
    int n;
    printf("enter a number ");
    scanf("%d",&n);
    if(n>999 && n<10000){
       sum(n);
    }
    else{
         printf("pls enter a valid input\n");
    }
    return 0;
}
