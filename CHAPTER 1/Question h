#include<stdio.h>
int main(){
   // calculating the reverse of a 5 digit number from its digits
   int n,rem=0,sum=0;
   printf("enter a 5 digit number ");
   scanf("%d",&n);
   if(n>9999 && n<100000){
    while(n!=0){
      rem=rem*10 + n%10;
      n/=10;
    }
    printf("the sum of 5 digits are %d",rem);
   }
   else 
   printf("pls enter a valid input");
    return 0;
}
