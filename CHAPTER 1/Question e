#include<stdio.h>
int main() {
   /* perimeter of rectangle 2(l+b)
      area of rectangle a*b
      area of circle pie*r*r
      circumference of circle 2*pie*r
   */
  int l,b,r;
  printf("LENGTH : ");
  scanf("%d",&l);
  printf("BREADTH : ");
  scanf("%d",&b);
  printf("AREA = %d\nPERIMETER = %d\n",l*b,2*(l+b));
  printf("RADIUS : ");
  scanf("%d",&r);
  printf("AREA = %.2f\nPERIMETER = %.2f",3.14*r*r,2*3.14*r);
    return 0;
}
